{
  "name": "popcorn-native",
  "version": "0.6.2",
  "private": true,
  "scripts": {
    "prebuild": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "build": "cd android && ./gradlew assembleProd && cd ../",
    "build-and-install": "yarn build && yarn install-on-device",
    "install-on-device": "adb install -r ./android/app/build/outputs/apk/prod/release/app-prod-release.apk",
    "lint": "eslint ./app/**/*.js",
    "lint:fix": "yarn lint --fix",
    "run:android": "react-native run-android --variant=devDebug",
    "start": "react-native start",
    "test": "jest"
  },
  "dependencies": {
    "i18n-js": "^3.0.11",
    "popcorn-sdk": "2.0.0",
    "prop-types": "^15.6.2",
    "react": "16.3.1",
    "react-native": "~0.55.2",
    "react-native-animatable": "^1.3.0",
    "react-native-fs": "^2.11.15",
    "react-native-google-cast": "github:flextv/react-native-google-cast",
    "react-native-languages": "^3.0.0",
    "react-native-linear-gradient": "^2.4.2",
    "react-native-markdown-renderer": "^3.2.8",
    "react-native-orientation": "^3.1.3",
    "react-native-splash-screen": "^3.1.1",
    "react-native-static-server": "^0.3.0",
    "react-native-super-grid": "^2.4.3",
    "react-native-torrent-streamer": "github:tripss/react-native-torrent-streamer",
    "react-native-typography": "^1.3.0",
    "react-native-vector-icons": "^5.0.0",
    "react-native-video": "^3.2.1",
    "react-navigation": "^2.14.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "update-react-native-app": "1.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.24.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.6.0",
    "jest-react-native": "^18.0.0",
    "react-test-renderer": "16.3.1"
  },
  "jest": {
    "preset": "react-native"
  }
}
